<!DOCTYPE html>
<html>
<head>
  <title>Detalles de Orden</title>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
  <style>
    /* Add your CSS styles here */
    body {
      font-family: "Roboto", sans-serif;
      background-color: #f2f2f2;
      color: #333;
      margin: 0;
      padding: 0;
    }
    h1 {
      background-color: #00ced1;
      color: #fff;
      padding: 10px;
      margin: 0;
    }
    h2 {
      margin: 20px 0 10px;
    }
    table {
      border-collapse: collapse;
      width: 100%;
    }
    th, td {
      border: 1px solid #ccc;
      padding: 8px;
      text-align: left;
    }
  </style>
</head>
<body>

  <h1>Orden Details</h1>
  <p>Orden ID: <%= orden.id %></p>
  <p>Cliente: <%= orden.cliente.nombre %></p>
  <p>Fecha: <%= orden.fecha %></p>
  <p>Estado: <%= orden.estado %></p>

  <h2>Productos</h2>
  <table>
    <tr>
      <th>Nombre</th>
      <th>Marca</th>
      <th>Precio</th>
    </tr>
    <% orden.productos.forEach(function(item) { %>
      <tr>
        <td><%= item.nombre %></td>
        <td><%= item.marca %></td>
        <td><%= item.precio %></td>
      </tr>
    <% }); %>
  </table>

  <h2>Paquetes</h2>
  <table>
    <tr>
      <th>Nombre</th>
      <th>Precio</th>
      <th>Productos</th>
    </tr>
    <% orden.paquetes.forEach(function(item) { %>
      <tr>
        <td><%= item.nombre %></td>
        <td><%= item.precio %></td>
        <td>
          <ul>
            <% item.productos.forEach(function(product) { %>
              <li><%= product.nombre %> - <%= product.marca %> - <%= product.precio %></li>
            <% }); %>
          </ul>
        </td>
      </tr>
    <% }); %>
  </table>

  <p>Total: <%= orden.total %></p>

</body>
</html>
